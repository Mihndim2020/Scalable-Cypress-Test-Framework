# ============================================
# Local Development Environment Template
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files to version control
# ============================================

# Application URLs
BASE_URL=http://localhost:3000
API_URL=http://localhost:3001

# Test Credentials (Local Development Only)
# Use ephemeral users in CI instead of hardcoded credentials
TEST_USERNAME=localuser
TEST_PASSWORD=localpassword123

# Test Configuration
TAGS=
ENVIRONMENT=local
NODE_ENV=development

# Cypress Settings
CYPRESS_VIDEO=false
CYPRESS_SCREENSHOTS=true
CYPRESS_baseUrl=http://localhost:3000
CYPRESS_VIEWPORT_WIDTH=1280
CYPRESS_VIEWPORT_HEIGHT=720

# Feature Flags
ENABLE_API_MOCKING=false
ENABLE_COVERAGE=false

# Local Development Settings
DEBUG=cypress:*
CI=false

# Optional: BrowserStack (for local cross-browser testing)
# Get credentials from https://www.browserstack.com/accounts/settings
# BROWSERSTACK_USERNAME=
# BROWSERSTACK_ACCESS_KEY=

# Optional: Reporting
# PERCY_TOKEN=
# ALLURE_RESULTS_DIR=allure-results
